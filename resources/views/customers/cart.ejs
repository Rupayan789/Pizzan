<section class="cart container md:px-12 px-5 mx-auto">
    <% if(!session.cart){ %>
    <div class="empty-cart py-16">
    <div class="container mx-auto text-center px-20">
        <h1 class="text-3xl font-bold mb-2">Cart Empty!!</h1>
        <p class="text-gray-400 text-lg mb-12 mt-8">You probably hav'nt order a pizza yet <br>
            To order a pizza,Go to the main page
        </p>
        <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="">
        <a class="inline-block px-6 py-2 mt-16 rounded-full btn-primary font-bold" href="/">Go Back</a>
    </div>

</div>
<% }else{ %>
    <div class=" order mx-auto w-full xl:w-1/2 py-16">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="cart-black">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)){ %>

                <div class="flex items-center w-full my-8">
                <img class="w-24" src="/img/pizza.png" alt="">
                <div class="flex-1 ml-4">
                        <h1><%= pizza.item.name %></h1>
                        <span><%= pizza.item.size %></span>
                </div>
                
            
                <span class="flex-1"><%= pizza.qty %> pcs</span>
                <span class="font-bold text-lg"><%= pizza.item.price %></span>
                 </div>

            <% } %>
           
            <hr>
            <div class="text-right py-8">
                <div>
                    <span class="font-bold text-lg">Total Amount: </span>
                    <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>
                </div>
                <%  if(user){ %>
                 <div>
                    <form action="/order" method="POST" class="mt-12 ml-auto">
                        <input class="border border-gray-400 p-2 w-1/2 mb-4" name="phone" placeholder="Phone Number" type="text">
                        <input class="border border-gray-400 p-2 w-1/2" name="address" placeholder="Address" type="text">
                        <div>
                            <button type="submit" class="btn-primary px-6 py-2 mt-6 rounded-full">Order Now</button>
                        </div>
                    </form>
            </div>
            <% }else{ %>
            <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full font-bold mt-8">Login to continue</a>
            <% } %>
        </div>
           
        </div>
    </div>
    <% } %>
</section>
