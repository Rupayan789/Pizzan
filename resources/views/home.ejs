<section class="hero py-16">
    <div class="container mx-auto px-20 flex items-center justify-between">
            <div class="w-1/2">
                <h6 class="text-lg font-bold"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl mt-6 font-bold">Don't Wait!!</h1>
                <button class="px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary">Order Now</button>
            </div>
            <div class="w-1/2">
                <img src="/img/hero-pizza.png" alt="hero-Pizza">
            </div>
    </div>
   
</section>
<section class="menu container mx-auto px-20 py-8">
    <h1 class="text-xl font-bold">All Pizzas</h1>
    <div class="grid grid-cols-4 gap-y-16 gap-x-12 mt-16">
        <% pizzas.forEach((pizza)=>{ %>
             <div class="w-64 py-4 pizzaEach">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="pizza">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="py-1 px-4 rounded-full uppercase text-xs size"><%= pizza.size %></span>
                <div class="flex justify-around items-center mt-6">
                    <span class="font-bold text-lg"><%= pizza.price %></span>
                    <button data-pizza="<%= JSON.stringify(pizza) %>" class="addToCart py-1 px-6 rounded-full flex justify-around items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>

        <% }) %>


       
        
        
    </div>
</section>