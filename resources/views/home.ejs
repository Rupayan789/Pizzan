<section class="hero py-16">
    <div class="container mx-auto md:px-20 px-10 flex items-center justify-between">
            <div class="w-1/2">
                <h6 class="text-lg font-bold ml-1"><em>Are you hungry?</em></h6>
                <h1 class="md:text-6xl text-3xl mt-6 font-bold">Don't Wait!!</h1>
                <button class="md:px-6 py-2 px-4  rounded-full text-white focus:outline-none font-bold mt-6 btn-primary">Order Now</button>
            </div>
            <div class="w-1/2 hero-pizza">
                <img  src="/img/hero-pizza.png" alt="hero-Pizza">
            </div>
    </div>
   
</section>
<section class="menu container mx-auto px-20 py-8">
    <h1 class="text-xl font-bold">All Pizzas</h1>
    <div class="grid xl:grid-cols-4 lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-y-16 gap-x-12 mt-16">
        <% pizzas.forEach((pizza)=>{ %>
             <div class="md:w-64 w-full py-4 pizzaEach">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="pizza">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="py-1 px-4 rounded-full uppercase text-xs size"><%= pizza.size %></span>
                <div class="flex justify-around items-center mt-6">
                    <span class="font-bold text-lg">&#8377 <%= pizza.price %></span>
                    <button type="button" data-pizza="<%= JSON.stringify(pizza) %>" class="addToCart focus:outline-none py-1 px-6 rounded-full flex justify-around items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>

        <% }) %>


       
        
        
    </div>
</section>